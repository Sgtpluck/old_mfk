<div class='flexy'>
  <%= image_tag("marry.png", class: 'option', id: 'marry') %>
  <%= image_tag("fuck.png", class: 'option', id: 'fuck') %>
  <%= image_tag("kill.png", class: 'option', id: 'kill') %>
</div>

<div class="error flexy">
</div>

<div class='statistics flexy'>
</div>

<table class='flexy'>
  <tr>
    <td> 
      <ul class='lists'>
        <li class='person'>MARRY</li>
        <li class='person'>FUCK</li>
        <li class='person'>KILL</li>
      </ul>
    </td>
    <td>
      <ul class='lists' id='sortable'>
        <% @choices.each do |choice| %>
            <li class='person names'> <%= choice.name.titleize %></li>
        <% end %>
      </ul>
    </td>
  </tr>
</table>

<input name="authenticity_token" 
       type="hidden"
       id='token'
       value="<%= form_authenticity_token %>"/>

<div class='options-container flexy' id="decision-submit">
  VOTE!
</div>
